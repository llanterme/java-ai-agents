# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TEXT_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_TIMEOUT_MS=30000
OPENAI_IMAGE_TIMEOUT_MS=120000

# SERP API Configuration (Optional - for web search)
SERPAPI_KEY=your_serpapi_key_here
SERPAPI_ENGINE=google
SERPAPI_LOCATION=United States
SERPAPI_MAX_RESULTS=5
SERPAPI_ENABLED=true

# Database Configuration
# For Docker on Mac/Windows, use 'host.docker.internal' to connect to host MySQL
# For Docker on Linux, use the host IP address or container network
DB_HOST=localhost
DB_PORT=3306
DB_NAME=java_ai_agents
DB_USERNAME=root
DB_PASSWORD=your_mysql_password

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=your_base64_encoded_jwt_secret_min_256_bits
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# OAuth Token Encryption
# Generate 32-byte key with: openssl rand -base64 32 | head -c 32
OAUTH_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Image Management
IMAGES_DOWNLOAD_ENABLED=true
IMAGES_STORAGE_PATH=./generated-images
IMAGES_KEEP_REMOTE_URL=false
IMAGES_BASE_URL=http://localhost:8080

# OAuth Redirect Configuration
OAUTH_REDIRECT_BASE_URL=http://localhost:8080

# Spring Profile (use 'production' for ECS)
SPRING_PROFILES_ACTIVE=default

# Server Configuration
SERVER_PORT=8080

# CORS Configuration (for production)
CORS_ALLOWED_ORIGINS=https://app.example.com